    <title><%= typeof pagina != 'undefined' ? pagina : 'Home' %></title>
	<script>
		function changeData(mode) {
			
			let d1 = document.getElementById('data1');
			let d2 = document.getElementById('data2');
			let d3 = document.getElementById('data3');

			let mb1 = document.getElementById('data-mb1');
			let mb2 = document.getElementById('data-mb2');
			let mb3 = document.getElementById('data-mb3');

			if(mode === "1"){
				d1.style.display = "";
				d3.style.display = "none";
				d2.style.display = "none";

				mb1.style.display = "";
				mb3.style.display = "none";
				mb2.style.display = "none";

			} else if(mode === "2"){
				d1.style.display = "none";
				d2.style.display = "";
				d3.style.display = "none";

				mb1.style.display = "none";
				mb2.style.display = "";
				mb3.style.display = "none";

			} else if(mode === "3"){
				d1.style.display = "none";
				d2.style.display = "none";
				d3.style.display = "";

				mb1.style.display = "none";
				mb2.style.display = "none";
				mb3.style.display = "";
			}	
		}
	</script>
