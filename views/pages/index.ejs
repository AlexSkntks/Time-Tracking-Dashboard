<!doctype html>
<html lang="pt-br">

	<%- include('../partials/head', {pagina: 'Time Tracking'}) %>
	<body>
		<header></header>
		<main>

			<div class="container d-none d-lg-block" style="margin-top: 100px; padding-right: 180px;">
				<div class="row">
					<div class="col-4">
						<div class="menu">
							<div class="profile">
								<img class="profile-img" src="/images/image-jeremy.png" alt="Imagem do perfil" width="70px">
								<p class="legend">Report for</p>
								<h1>Jeremy<br> Robson</h1>
							</div>
							<nav class="flex-column">
								<a id="bt1" onclick="changeData('1')" class="nav-link active" aria-current="true" href="#">Daily</a>
								
								<a id="bt2" onclick="changeData('2')" class="nav-link" href="#">Weekly</a>
								
								<a id="bt3" onclick="changeData('3')" class="nav-link" href="#">Monthly</a>
							</nav>
						</div>	
					</div>
					<!-- Força as próximas colunas para uma próxima linha -->
					<div class="w-100 d-none d-md-block d-lg-none"></div>
					<div class="col-8">
						<div id="data1" class="row row-cols-3 gy-4 gx-4">
							<% data.forEach(function(info){%>
								<div class="w-100 d-none d-sm-block d-md-block d-lg-none"></div>
								<div class="col">
									<!-- Cada coluna tem cor e imagem definidas pela informação que vem do server-side  -->
									<!-- O linear-gradient é para que a corzinha do detalhe não fique com uma pontinha sobrando embaixo -->
									<div id="det" class="details"
										style="background-image: linear-gradient(<%= info.color %>, <%= info.color %>, hsl(226, 43%, 10%), hsl(226, 43%, 10%));">
										<img class="img-icon" src="/images/<%=info.icon%>">
										<div class="card">
											<!-- Colocando os três pontinhos de sub-menu -->
											<div class="container-fluid">
												<div class="row justify-content-between">
													<div class="col">
														<p class="title"><b><%= info.title %></b></p>
													</div>
													<div class="col d-flex justify-content-end">
														<img class="more" src="/images/icon-ellipsis.svg">
													</div>
												</div>
											</div>
											<p class="current">
												<%= info.timeframes.daily.current %>hrs
											</p>
											<p class="previous">
												Last day - <%= info.timeframes.daily.previous %>hrs
											</p>
										</div>
									</div>
								</div>
							<%});%>
						</div>
						<div id="data2" class="row row-cols-3 gy-4 gx-4" style="display: none;">
							<% data.forEach(function(info){%>
								<div class="col">
									<!-- Cada coluna tem cor e imagem definidas pela informação que vem do server-side  -->
									<!-- O linear-gradient é para que a corzinha do detalhe não fique com uma pontinha sobrando embaixo -->
									<div id="det" class="details"
										style="background-image: linear-gradient(<%= info.color %>, <%= info.color %>, hsl(226, 43%, 10%), hsl(226, 43%, 10%));">
										<img class="img-icon" src="/images/<%=info.icon%>">
										<div class="card">
											<!-- Colocando os três pontinhos de sub-menu -->
											<div class="container-fluid">
												<div class="row justify-content-between">
													<div class="col">
														<p class="title"><b><%= info.title %></b></p>
													</div>
													<div class="col d-flex justify-content-end">
														<img class="more" src="/images/icon-ellipsis.svg">
													</div>
												</div>
											</div>
											
											<p class="current">
												<%= info.timeframes.weekly.current %>hrs
											</p>
											<p class="previous">
												Last week - <%= info.timeframes.weekly.previous %>hrs
											</p>
										</div>
									</div>
								</div>
							<%});%>
						</div>
						<div id="data3" class="row row-cols-3 gy-4 gx-4" style="display: none;">
							<% data.forEach(function(info){%>
								<div class="col">
									<!-- Cada coluna tem cor e imagem definidas pela informação que vem do server-side  -->
									<!-- O linear-gradient é para que a corzinha do detalhe não fique com uma pontinha sobrando embaixo -->
									<div id="det" class="details"
										style="background-image: linear-gradient(<%= info.color %>, <%= info.color %>, hsl(226, 43%, 10%), hsl(226, 43%, 10%));">
										<img class="img-icon" src="/images/<%=info.icon%>">
										<div class="card">
											<!-- Colocando os três pontinhos de sub-menu -->
											<div class="container-fluid">
												<div class="row justify-content-between">
													<div class="col d-flex justify-content-start">
														<p class="title"><b><%= info.title %></b></p>
													</div>
													<div class="col d-flex justify-content-end">
														<img class="more" src="/images/icon-ellipsis.svg">
													</div>
												</div>
											</div>
											
											<p class="current">
												<%= info.timeframes.monthly.current %>hrs
											</p>
											<p class="previous">
												Last monthly - <%= info.timeframes.monthly.previous %>hrs
											</p>
										</div>
									</div>
								</div>
							<%});%>
						</div>
					</div>
				</div>
			</div>

			<!--^ Abaixo o código aparece para telas menores -->

